/**index.wxss**/
page{
    height: 100%;
}
.container{
    display: flex;
    flex-direction: column;
    height: 100%;
}
.userinfo{
    display: flex;
    flex-direction: row;
    justify-content:space-around;
    width:100%;
    height:30%;
}
.uin{
    display: flex;
    flex-direction: column;
    width:40%
}
.uinb{
    display: flex;
    flex-direction: row;
    justify-content:space-around;
    align-items:center;
}
.uinb image{
    width:30rpx;
    height:30rpx;
}
.uinu{
    display: flex;
    flex-direction: row;
    justify-content:space-around;
    padding-top:50rpx;
}
.uiavatar{
    display: flex;
    flex-direction: column;
    align-items:center;
}
.uiavatar image{
    width:150rpx;
    height:150rpx;
}
.operate{
    display: flex;
    flex-direction: row;
    justify-content:space-around;
    width:100%;
    height:10%;
    padding-bottom:10px;
    border-bottom:1rpx solid;
}
.option{
    display: flex;
    flex-direction: column;
    justify-content:space-around;
    height:40%;
    padding-left:20px;
    padding-top:10px;
}
.option_item{
    padding-bottom:10rpx;
    border-bottom: 1rpx solid;
}