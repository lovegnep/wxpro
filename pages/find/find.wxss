/**index.wxss**/
page{
    height:100%;
}
.container{
    display: flex;
    flex-direction: column;
    height:100%;
    width:100%;
}
.head{
    display: flex;
    flex-direction: row;
    justify-content:space-around;
    padding-top:10rpx;
}
.search{
    padding-bottom:10rpx;
    padding-top:10rpx;
    border-bottom: 1rpx solid;
}
.finditem_select{
    color:#123456;
    border-bottom:1rpx solid;
}
.finditem{
}
.searchgroupname{
    padding-top:40rpx;
    display: flex;
    flex-direction: column;
    justify-content:center;
    width:100%;
}
.gnitem{
    display: flex;
    flex-direction: row;
    justify-content:space-between;
    border-bottom:1rpx solid;
    padding-bottom:20rpx;
}
.gnitem image{
    width:40rpx;
    height:40rpx;
}
.resscroll{
    height:90%;
}
.rscroll{
    display: flex;
    flex-direction: column;
    justify-content:center;
    height:100%;
    width:100%;
}
.rscroll image{
    width:200rpx;
    height:200rpx;
}
.resitem{
    display: flex;
    flex-direction: row;
    justify-content:center;
    width:80%;
}
.abstract{
    display: flex;
    flex-direction: column;
    width:50%;
}
.hitem{
height: auto;
margin-right: 23rpx;
display: inline-block;
}
.scrollbox{
width: 100%;
height:100rpx;
overflow: hidden;
padding: 20rpx;
background: #fff;
white-space: nowrap;
}
.hothistory{
    display: flex;
    flex-direction: column;
    justify-content:center;
    align-items:center;
}