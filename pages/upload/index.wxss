/**index.wxss**/
.container{
    padding:10rpx;
    display: flex;
    flex-direction: column;
}
.abstractwrap{
    z-index:20;
    position:fixed;
    left:0;
    right:0;
    top:0;
    bottom:0;
    background:rgba(0,0,0,0.7);
    display: flex;
    flex-direction: row;
    justify-content:center;
    align-items: center;
}
.abstract{
    background-color:#ffffff;
    position:relative;
    border-radius:10rpx;
    width:100%;
    display: flex;
    flex-direction: row;
    justify-content:space-around;
}
.section{
    padding:10rpx;
    border-bottom:1rpx solid;
    margin-bottom:12px;
}
.sectionqr{
    padding:10rpx;
    border-bottom:1rpx solid;
    margin-bottom:12px;
display: flex;
    align-items: center;
}
.picker{
    border: 1rpx solid;
    min-width:10rpx;
    min-height:10rpx;
}
image{
    width:150rpx;
    height:150rpx;
    right:100rpx;
}
.section__title{
padding-right:30rpx;
}
.section__qr{
padding-right:30rpx;
}
.headtype{

}
.headtype_select{
    border-bottom:1rpx solid;
}
.record{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.record_item{
    width:100%;
    display: flex;
    flex-direction: row;
    justify-content:space-around;
}
.record_item image{
    width:40rpx;
    height:40rpx;
}
.recorditeminfo{
    border: 1rpx solid;
}
.recorditemopt{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.opthead{
    display: flex;
    flex-direction: row;
    justify-content:center;
}