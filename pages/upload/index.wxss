/**index.wxss**/
page{
    height:100%;
    width:100%;
}
.uploadtype{
    width:180rpx;
    height:180rpx;
    border-radius:90rpx;
    border:1rpx solid;
    display:flex;
    justify-content:center;
    align-items:center;
    background-color:#015fb6;
}
.container{
    display: flex;
    flex-direction: column;
    height:100%;
    width:100%;
}
.abstractwrap{
    z-index:20;
    position:fixed;
    left:0;
    right:0;
    top:0;
    bottom:0;
    background:rgba(0,0,0,0.7);
    display: flex;
    flex-direction: row;
    justify-content:center;
    align-items: center;
}
.abstract{
    position:relative;
    border-radius:10rpx;
    width:100%;
    height:50%;
    display: flex;
    flex-direction: column;
    justify-content:space-around;
}
.abstractitem{
    display: flex;
    flex-direction: row;
    justify-content:space-around;
}
.section{
    padding:10rpx;
    border-bottom:1rpx solid;
    margin-bottom:12px;
}
.sectionqr{
    padding:10rpx;
    border-bottom:1rpx solid;
    margin-bottom:12px;
display: flex;
    align-items: center;
}
.picker{
    border: 1rpx solid;
    min-width:10rpx;
    min-height:10rpx;
}
image{
    width:150rpx;
    height:150rpx;
    right:100rpx;
}
.section__title{
padding-right:30rpx;
}
.section__qr{
padding-right:30rpx;
}
.headtype{

}
.headtype_select{
    border-bottom:1rpx solid;
}
.record{
    display: flex;
    flex-direction: column;
    align-items: center;
    width:100%;
    height:100%;
}
.record_item{
    display: flex;
    flex-direction: row;
    justify-content:center;
    border-bottom:1rpx solid;
    width:100%;
    margin-bottom:12px;
}
/*.record_item:last-child{
    border-bottom:none;
}*/
.record_item image{
    width:160rpx;
    height:160rpx;
    padding-right:15rpx;
}
.recorditeminfo{
    display: flex;
    flex-direction: column;
    width:50%;
    height:160rpx;
    overflow:hidden
}
.recorditemopt{
    display:flex;
    flex-direction: column;
    justify-content:space-around;
}
.opthead{
    display: flex;
    flex-direction: row;
    justify-content:center;
    position:fixed;
    top:0;
    position:fixed;
    top:0;
    width:100%;
    background-color:#aaaaaa;
    z-index:20;
}
.uploadhead{
    margin-right:15rpx;
}
.scrollrecord{
    padding-top:70rpx;
    height:100%;
    height:100%;
}
.formdata{
    padding-top:50rpx;
}